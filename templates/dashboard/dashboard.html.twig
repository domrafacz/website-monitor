{% extends 'base.html.twig' %}

{% block title %}{% trans %}dashboard_title{% endtrans %}{% endblock %}

{% block body %}
    {% include('dashboard/_sidebar.html.twig') %}
    <div class="wrapper d-flex flex-column min-vh-100 bg-light">
        {% include('dashboard/_navbar.html.twig') %}
        <div class="p-4">
            <h3>{% trans %}dashboard_title{% endtrans %}</h3>
            <div class="pt-3">
                <div class="row row-cols-md-2 row-cols-xxl-4 row-cols-xl-2">
                    <div class="col-md">
                        <div class="card bg-white border-0 mb-3 shadow-sm">
                            <div class="card-body ps-4">
                                <h6 class="card-title">{% trans %}website_count{% endtrans %}</h6>
                                <p class="card-text uptime">
                                    <i class="far fa-file"></i>
                                    <span class="uptime-number ps-3">{{ app.user.websites.count() }}</span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="card bg-white border-0 mb-3 shadow-sm">
                            <div class="card-body ps-4">
                                <h6 class="card-title">{% trans %}notification_channels_count{% endtrans %}</h6>
                                <p class="card-text uptime">
                                    <i class="fas fa-bell"></i>
                                    <span class="uptime-number ps-3">{{ app.user.notifierChannels.count() }}</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        {% include('dashboard/_flash_messages.html.twig') %}
    </div>
{% endblock %}
